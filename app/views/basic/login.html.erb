<!DOCTYPE html>
<html>
<head>
	<title>NoteEx</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://fonts.googleapis.com/css?family=Dosis|Lato" rel="stylesheet">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
	<div id="custom-bootstrap-menu" class="navbar navbar-default " role="navigation">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">
					<i class="glyphicon glyphicon-list-alt"></i>
				</a>
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder">
					<span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
				</button>
			</div>
			<div class="collapse navbar-collapse navbar-menubuilder">
				<ul class="nav navbar-nav navbar-right" id="navbar-buttons-list">
					<li><a href="<%= sign_up_path %>">Sign Up</a></li>
				</ul>
			</div>
		</div>
		<section class="navbar_coloured_strip light_sea_green_background">
			<div class="container"/>
		</section>	
	</div>
	<div class="container">
		<div class="row">
			<div class="col-xs-4">
				<span class="keppel header">Note</span>
				<span class="light_sea_green header">Ex</span>
			</div>
		</div>	
		<div class="form-signin center-block">
			<h2 class="form-signin-heading">Login</h2>
			<div class="row">
				<div class="col-sm-6">
					<%= form_tag(authenticate_path, method: "post") do %>
					Username: <input type="text" name="username" class="form-control" required autofocus> </br>
					Password: <input type="password" name="password" class="form-control" required> </br>
					<%= submit_tag "Login", class: "btn btn-lg btn-success btn-block" %>

					<!-- Display error message -->
					<% if @user && @user.errors.any? %>
					<ul class="error-list">
						<% @user.errors.full_messages.each do |error_message| %>
						<li><%= error_message %></li>
						<% end %>
					</ul>
					<% end %>
					<% end %>	
				</div>
				<div class="col-sm-1">
				</div>
				<div class="col-sm-3 text-center">
					<br/><br/><br/> or
					<a href="<%= sign_up_path %>" class="btn btn-lg btn-default btn-block">
						<span class="glyphicon glyphicon-user"></span> Sign Up 
					</a>
				</div>				
			</div>
		</div>
	</body>
	</html>
